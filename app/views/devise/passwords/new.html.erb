<h2>Forgot/Set your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, value: params[:email], autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "btn btn-primary block full-width m-b" %>
  </div>
<% end %>

