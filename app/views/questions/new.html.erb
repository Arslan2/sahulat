<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>New Feedback Question</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
        </li>
        <li>
            <a>Feedback Questions</a>
        </li>
        <li class="active">
            <strong>New Feedback Question</strong>
        </li>
    </ol>
</div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Create new question</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#">Config option 1</a>
                        </li>
                        <li><a href="#">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">






                <!-- <form method="get" class="form-horizontal"> -->

 <%= form_for(@question, url: @question.persisted? ? question_path(@question) : questions_create_path(@question), method: @question.persisted? ? 'put' : 'post', html: {class: 'form-horizontal'}) do |f| %>
                    <div class="form-group"><label class="col-sm-2 control-label">Question</label>

                        <div class="col-sm-10"><%= f.text_field :title, class: "form-control" %></div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group"><label class="col-sm-2 control-label">Placeholder</label>

                        <div class="col-sm-10"><%= f.text_field :placeholder, class: "form-control" %></div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group"><label class="col-sm-2 control-label">Question Type</label>

                        <div class="col-sm-10">
                        	<%= f.select(:question_type, ['Text', 'Number', 'MCQs', 'Date'], {}, {class: "form-control m-b"}) %>
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>
                    <div class="form-group"><label class="col-sm-2 control-label">Question options <br/><small class="text-navy">Answers</small></label>

                        <div class="col-sm-10">
                            <div class="i-checks"><label> <%= f.check_box :options %> <i></i> Yes </label></div>
                            <div class="i-checks"><label> <%= f.check_box :options %> <i></i> NO </label></div>

                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    
                    <div class="form-group"><label class="col-sm-2 control-label">Required <br/><small class="text-navy">Is question required?</small></label>

                        <div class="col-sm-10">

                        	<%= f.label 'Required' do %>
				              <%= f.radio_button :required, true %> Yes
				              <%= f.radio_button :required, false %> No
				          	<% end %>
                        </div>
                    </div>

                    <div class="form-group"><label class="col-sm-2 control-label">Active <br/><small class="text-navy">Is question active?</small></label>

                        <div class="col-sm-10">

                        	<%= f.label 'Required' do %>
				              <%= f.radio_button :active, true %> Yes
				              <%= f.radio_button :active, false %> No
				          	<% end %>
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-white" type="submit">Cancel</button>
                      		<%= f.submit class: "btn btn-primary" %>

                        </div>
                    </div>
                <% end %>
<!--                 </form> -->
            </div>
        </div>
    </div>
</div>
</div>

<% content_for :javascript do %>

<script type="text/javascript">


$(function() {

    $('.i-checks').iCheck({
        checkboxClass: 'icheckbox_square-green',
        radioClass: 'iradio_square-green',
    });

});

</script>

<% end %>


